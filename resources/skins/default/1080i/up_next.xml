<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- still_there -->
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<animation effect="slide" start="550,0" time="200">WindowOpen</animation>
	<animation effect="slide" end="550,0" time="200">WindowClose</animation>
	<zorder>300</zorder>

	<controls>
		<control type="group">
			<depth>0.45</depth>
			<animation effect="slide" end="0,50" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True)">Conditional</animation>
			<animation effect="slide" end="0,50" time="200" condition="Window.IsActive(volumebar)">Conditional</animation>
			<animation effect="slide" end="0,20" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True) | Window.IsActive(volumebar)">Conditional</animation>
			<animation effect="slide" end="0,85" time="200" condition="Window.IsActive(notification)">Conditional</animation>
			<animation effect="slide" end="0,85" time="200" condition="Window.IsActive(extendedprogressdialog)">Conditional</animation>

			<!-- Background -->
			<control type="image">
				<top>90</top>
				<right>-100</right>
				<width>650</width>
				<height>107</height>
				<texture colordiffuse="66001e27">Background.png</texture>
			</control>

			<control type="group">
				<top>90</top>
				<right>0</right>
				<width>550</width>
				<height>107</height>

				<!-- Heading -->
				<control type="label">
					<left>10</left>
					<top>10</top>
					<width>530</width>
					<height>20</height>
					<align>left</align>
					<font>Font27</font>
					<label>$ADDON[service.zumbrella 32032]</label>
				</control>

				<!-- Details -->
				<control type="fadelabel">
					<right>10</right>
					<top>40</top>
					<width>530</width>
					<height>25</height>
					<align>left</align>
					<font>Font27-light</font>
					<label>$INFO[Window.Property(label)]</label>
				</control>

				<!-- Continue watching -->
				<control type="button" id="3012">
					<left>10</left>
					<top>70</top>
					<height>27</height>
					<width>170</width>
					<align>center</align>
					<font>Font27</font>
					<label>$ADDON[service.zumbrella 32029]</label>
					<oninfo>noop</oninfo>
					<onleft>3013</onleft>
					<onright>3014</onright>
					<texturefocus colordiffuse="FFFFFFFF">focus27c.png</texturefocus>
				</control>

        <!-- Hide -->
        <control type="button" id="3014">
					<left>190</left>
					<top>70</top>
					<height>27</height>
					<width>170</width>
					<align>center</align>
					<font>Font27</font>
					<label>$ADDON[service.zumbrella 32030]</label>
					<oninfo>noop</oninfo>
					<onleft>3012</onleft>
					<onright>3013</onright>
					<texturefocus colordiffuse="FFFFFFFF">focus27c.png</texturefocus>
				</control>

				<!-- Close/Stop -->
				<control type="button" id="3013">
					<left>370</left>
					<top>70</top>
					<height>27</height>
					<width>170</width>
					<align>center</align>
					<font>Font27</font>
          <label>$ADDON[service.zumbrella 32031]</label>
					<oninfo>noop</oninfo>
					<onleft>3014</onleft>
					<onright>3012</onright>
					<texturefocus colordiffuse="FFFFFFFF">focus27c.png</texturefocus>
				</control>

				<!-- Progress -->
				<control type="progress" id="3015">
					<right>0</right>
					<top>105</top>
					<width>550</width>
					<height>2</height>
					<visible>true</visible>
					<midtexture colordiffuse="FFFFFFFF">white.png</midtexture>
				</control>

			</control>

		</control>

	</controls>

</window>
